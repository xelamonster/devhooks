{
  "lineWidth": 110,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferDouble",
    "quoteProps": "asNeeded",
    "conditionalExpression.operatorPosition": "sameLine",
    "preferSingleLine": true
  },
  "json": { "preferSingleLine": true },
  "markdown": {},
  "malva": {},
  "markup": {},
  "yaml": {},
  "excludes": ["**/node_modules", "**/*-lock.json", "**/*-lock.yaml", "**/package.json"],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.91.3.wasm",
    "https://plugins.dprint.dev/json-0.19.3.wasm",
    "https://plugins.dprint.dev/markdown-0.17.1.wasm",
    "https://plugins.dprint.dev/g-plane/malva-v0.5.1.wasm",
    "https://plugins.dprint.dev/g-plane/markup_fmt-v0.10.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.3.0.wasm"
  ]
}
